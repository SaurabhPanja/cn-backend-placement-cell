<%- include('../partials/header') %>
<form action="/students" method="post" class="max-w-500 m-auto mt-5">
  <h1>New Student</h1>
  <div class="form-group mt-2">
    <label for="student-name">Name</label>
    <input
      name="student-name"
      placeholder="Enter Name"
      class="form-control"
      required
    />
  </div>
  <div class="form-group mt-2">
    <label for="college">College</label>
    <input
      name="college"
      placeholder="Enter College name"
      class="form-control"
      required
    />
  </div>
  <div class="form-group mt-2">
    <label for="placement-status">Placement Status</label>
    <select name="placement-status" id="placement-status" class="form-select" required>
      <option value="">Select from the menu</option>
      <option value="placed">Placed</option>
      <option value="not-place">Not Placed</option>
      <option value="on-hold">On Hold</option>
      <option value="did-not-attempt">Didn't Attempt</option>
    </select>
  </div>
  <div class="form-group mt-2">
    <label for="dsa-final-score">DSA Final Score</label>
    <input
      name="dsa-final-score"
      class="form-control"
      required
    />
  </div>
  <div class="form-group mt-2">
    <label for="webd-final-score">WebD Final Score</label>
    <input
      name="webd-final-score"
      class="form-control"
      required
    />
  </div>
  <div class="form-group mt-2">
    <label for="react-final-score">React Final Score</label>
    <input
      name="react-final-score"
      class="form-control"
      required
    />
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<%- include("../partials/footer") %>
